      <form action="/addTask" method="post">
        <div id="todoForm" class="todoForm">
          <div class="form-content">
            <span class="close">&times;</span>
            <div class="input-row">
              <textarea id="myTextarea" placeholder="Task name" class="txt" name="taskName"></textarea>
              <script>
                const textarea = document.getElementById('myTextarea');
              
                textarea.addEventListener('input', function() {
                  this.style.height = 'auto';
                  this.style.height = this.scrollHeight + 'px';
                });
              </script>
              <!-- <textarea type="text" placeholder="Task name"></textarea> -->
            </div>
            <div class="input-row">
              <textarea id="myTxtarea" placeholder="Task description" class="txt" name="taskDescription"></textarea>
              <script>
                const text = document.getElementById('myTxtarea');
              
                text.addEventListener('input', function() {
                  this.style.height = 'auto';
                  this.style.height = this.scrollHeight + 'px';
                });
              </script>
            </div>
            <div class="input-row">
                <button class="TaskSubmit" type="submit">Confirm</button>
            </div>
          </div>
        </div>
      </form>
